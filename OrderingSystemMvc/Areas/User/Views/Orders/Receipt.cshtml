@model OrderingSystemMvc.ViewModels.ReceiptViewModel
@{
    ViewData["Title"] = $"收據 - 訂單 #{Model.Order.Id}";
    Layout = null; // 不使用 Layout，純收據頁面
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    
    <style>
        /* A5 尺寸設定 (148mm x 210mm) */
        @@page {
            size: A5;
            margin: 10mm;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Microsoft JhengHei', Arial, sans-serif;
            font-size: 12px;
            line-height: 1.4;
            color: #333;
            width: 128mm;
            margin: 0 auto;
        }
        
        .receipt-container {
            background: white;
            padding: 8mm;
        }
        
        .header {
            text-align: center;
            border-bottom: 2px solid #333;
            padding-bottom: 8px;
            margin-bottom: 12px;
        }
        
        .store-name {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 4px;
        }
        
        .store-info {
            font-size: 10px;
            color: #666;
            line-height: 1.3;
        }
        
        .receipt-title {
            text-align: center;
            font-size: 16px;
            font-weight: bold;
            margin: 10px 0;
            text-decoration: underline;
        }
        
        .basic-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 12px;
            font-size: 11px;
        }
        
        .info-left, .info-right {
            flex: 1;
        }
        
        .info-row {
            margin-bottom: 3px;
        }
        
        .label {
            font-weight: bold;
            display: inline-block;
            width: 70px;
        }
        
        .items-section {
            margin: 15px 0;
        }
        
        .section-title {
            font-weight: bold;
            font-size: 13px;
            margin-bottom: 8px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 3px;
        }
        
        .items-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 11px;
        }
        
        .items-table th {
            background-color: #f5f5f5;
            padding: 6px 4px;
            text-align: left;
            font-weight: bold;
            border: 1px solid #ddd;
        }
        
        .items-table td {
            padding: 6px 4px;
            border: 1px solid #ddd;
            vertical-align: top;
        }
        
        .item-name { width: 45%; }
        .item-price { width: 18%; text-align: right; }
        .item-qty { width: 12%; text-align: center; }
        .item-total { width: 20%; text-align: right; font-weight: bold; }
        
        .item-options {
            font-size: 10px;
            color: #666;
            margin-top: 2px;
            padding-left: 8px;
        }
        
        .summary-section {
            margin-top: 15px;
            border-top: 2px solid #333;
            padding-top: 8px;
        }
        
        .summary-table {
            width: 100%;
            font-size: 12px;
        }
        
        .summary-table td {
            padding: 3px 0;
        }
        
        .summary-table .label-col {
            width: 70%;
            text-align: right;
            padding-right: 10px;
        }
        
        .summary-table .amount-col {
            width: 30%;
            text-align: right;
            font-weight: bold;
        }
        
        .total-row {
            font-size: 14px;
            font-weight: bold;
            border-top: 1px solid #333;
            padding-top: 5px;
        }
        
        .status-section {
            margin: 12px 0;
            padding: 8px;
            background-color: #f8f9fa;
            border-radius: 4px;
            text-align: center;
        }
        
        .status-text {
            font-weight: bold;
            font-size: 13px;
        }
        
        .footer {
            margin-top: 15px;
            border-top: 1px dashed #999;
            padding-top: 8px;
            text-align: center;
            font-size: 10px;
            color: #666;
        }
        
        .footer-row {
            margin-bottom: 3px;
        }
        
        @@media print {
            .receipt-container {
                padding: 0;
            }
            
            body {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
            
            .no-print {
                display: none;
            }
        }
        
        .print-buttons {
            position: fixed;
            top: 10px;
            right: 10px;
            z-index: 1000;
        }
        
        .btn {
            padding: 8px 16px;
            margin: 0 5px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
        }
        
        .btn-print {
            background-color: #007bff;
            color: white;
        }
        
        .btn-close {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <!-- 列印和關閉按鈕 -->
    <div class="print-buttons no-print">
        <button class="btn btn-print" onclick="window.print()">列印收據</button>
        <button class="btn btn-close" onclick="window.close()">關閉</button>
    </div>

    <div class="receipt-container">
        <!-- 店家資訊 -->
        <div class="header">
            <div class="store-name">@Model.StoreName</div>
            <div class="store-info">
                地址：@Model.StoreAddress<br>
                電話：@Model.StorePhone<br>
                營業時間：@Model.StoreHours
            </div>
        </div>
        
        <!-- 收據標題 -->
        <div class="receipt-title">收 據</div>
        
        <!-- 基本資訊 -->
        <div class="basic-info">
            <div class="info-left">
                <div class="info-row">
                    <span class="label">訂單編號：</span>#@Model.Order.Id
                </div>
                <div class="info-row">
                    <span class="label">訂購時間：</span>@Model.Order.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                </div>
                <div class="info-row">
                    <span class="label">客戶：</span>@Model.CustomerName
                </div>
            </div>
            <div class="info-right">
                <div class="info-row">
                    <span class="label">收據編號：</span>@Model.ReceiptNumber
                </div>
                <div class="info-row">
                    <span class="label">列印時間：</span>@Model.PrintTime.ToString("yyyy/MM/dd HH:mm")
                </div>
                <div class="info-row">
                    <span class="label">取餐方式：</span>店內取餐
                </div>
            </div>
        </div>
        
        <!-- 商品明細 -->
        <div class="items-section">
            <div class="section-title">訂購商品明細</div>
            <table class="items-table">
                <thead>
                    <tr>
                        <th class="item-name">商品名稱</th>
                        <th class="item-price">單價</th>
                        <th class="item-qty">數量</th>
                        <th class="item-total">小計</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Order.Items)
                    {
                        <tr>
                            <td class="item-name">
                                @item.Name
                                @if (item.OrderOptionItems?.Any() == true)
                                {
                                    <div class="item-options">
                                        * @string.Join("、", item.OrderOptionItems.Select(o => o.OptionItem?.Name ?? "選項"))
                                    </div>
                                }
                            </td>
                            <td class="item-price">$@item.Price.ToString("N2")</td>
                            <td class="item-qty">@item.Quantity</td>
                            <td class="item-total">
                                @{
                                    var itemTotal = item.Price * item.Quantity + (item.OrderOptionItems?.Sum(o => o.ExtraPrice * item.Quantity) ?? 0);
                                }
                                $@itemTotal.ToString("N2")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- 金額計算 -->
        <div class="summary-section">
            <table class="summary-table">
                <tr>
                    <td class="label-col">商品總計：</td>
                    <td class="amount-col">$@Model.Order.Items.Sum(i => i.Price * i.Quantity).ToString("N2")</td>
                </tr>
                <tr>
                    <td class="label-col">加購費用：</td>
                    <td class="amount-col">$@Model.Order.Items.SelectMany(i => i.OrderOptionItems ?? new List<OrderOptionItem>()).Sum(o => o.ExtraPrice).ToString("N2")</td>
                </tr>
                <tr>
                    <td class="label-col">服務費：</td>
                    <td class="amount-col">免費</td>
                </tr>
                <tr class="total-row">
                    <td class="label-col">總金額：</td>
                    <td class="amount-col">$@Model.Order.TotalAmount.ToString("N2")</td>
                </tr>
            </table>
        </div>
        
        <!-- 訂單狀態 -->
        <div class="status-section">
            <div class="status-text">
                訂單狀態：@(Model.Order.Status?.Name ?? "處理中")
            </div>
        </div>
        
        <!-- 付款資訊 -->
        <div class="items-section">
            <div class="section-title">付款資訊</div>
            <div style="padding: 5px 0; font-size: 11px;">
                <div style="margin-bottom: 3px;"><strong>付款方式：</strong>現金付款</div>
                <div style="margin-bottom: 3px;"><strong>付款狀態：</strong>已付款</div>
                <div><strong>發票：</strong>電子發票已寄送</div>
            </div>
        </div>
        
        <!-- 頁腳資訊 -->
        <div class="footer">
            <div class="footer-row"><strong>謝謝您的光臨！</strong></div>
            <div class="footer-row">如有任何問題，請洽客服專線：@Model.StorePhone</div>
            <div class="footer-row">或 email：service@restaurant.com</div>
            <div class="footer-row" style="margin-top: 8px; font-size: 9px;">
                此收據為電腦列印，無需蓋章 | OrderingSystemMvc v1.0
            </div>
        </div>
    </div>
</body>
</html>