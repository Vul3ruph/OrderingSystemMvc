@model OrderingSystemMvc.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "會員資料";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>會員資料管理
                    </h4>
                </div>
                <div class="card-body p-4">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold">
                                        <i class="fas fa-envelope me-1"></i>Email
                                    </label>
                                    <input asp-for="Email" class="form-control" readonly style="background-color: #f8f9fa;" />
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>Email 無法修改
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label fw-semibold">
                                        <i class="fas fa-phone me-1"></i>手機號碼
                                    </label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="09xxxxxxxx" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save me-2"></i>儲存變更
                                    </button>

                                    <a asp-area="User" asp-controller="Menu" asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>返回選單
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- 帳戶統計卡片 -->
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-center border-primary">
                        <div class="card-body">
                            <i class="fas fa-shopping-cart fa-2x text-primary mb-2"></i>
                            <h6 class="card-title">總訂單數</h6>
                            <h4 class="text-primary">@Model.TotalOrders</h4>
                            <small class="text-muted">筆訂單</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card text-center border-success">
                        <div class="card-body">
                            <i class="fas fa-dollar-sign fa-2x text-success mb-2"></i>
                            <h6 class="card-title">消費金額</h6>
                            <h4 class="text-success">$@Model.TotalSpent.ToString("N0")</h4>
                            <small class="text-muted">累計消費</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card text-center border-warning">
                        <div class="card-body">
                            <i class="fas fa-star fa-2x text-warning mb-2"></i>
                            <h6 class="card-title">會員等級</h6>
                            <h4 class="text-warning">@Model.MemberLevel</h4>
                            <small class="text-muted">會員</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 如果想要顯示會員等級進度，可以加入： -->
            @if (Model.TotalOrders > 0)
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-trophy me-2"></i>會員等級進度
                        </h6>
                    </div>
                    <div class="card-body">
                        @{
                            var nextLevelSpend = GetNextLevelRequirement(Model.TotalSpent);
                            var progress = nextLevelSpend > 0 ? (double)Model.TotalSpent / (double)nextLevelSpend * 100.0 : 100.0;
                            if (progress > 100) progress = 100;
                        }

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>目前等級：<strong>@Model.MemberLevel</strong></span>
                            <span>消費金額：<strong>$@Model.TotalSpent.ToString("N0")</strong></span>
                        </div>

                        <div class="progress mb-2" style="height: 10px;">
                            <div class="progress-bar bg-warning"
                                 role="progressbar"
                                 style="width: @progress.ToString("F1")%">
                            </div>
                        </div>

                        @if (progress < 100)
                        {
                            <small class="text-muted">
                                再消費 $@((nextLevelSpend - Model.TotalSpent).ToString("N0")) 即可升級
                            </small>
                        }
                        else
                        {
                            <small class="text-success">
                                <i class="fas fa-crown me-1"></i>已達最高等級！
                            </small>
                        }
                    </div>
                </div>
            }

            <!-- 快捷功能 -->
            <div class="card mt-4">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-tools me-2"></i>快捷功能
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="fas fa-history me-2"></i>查看訂單紀錄
                            </a>
                        </div>
                        @* <div class="col-md-6">
                            <a href="#" class="btn btn-outline-warning w-100">
                                <i class="fas fa-gift me-2"></i>我的優惠券
                            </a>
                        </div> *@
                        <div class="col-md-6">
                            <a asp-action="ChangePassword" class="btn btn-outline-info w-100">
                                <i class="fas fa-key me-2"></i>修改密碼
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-area="User" asp-controller="Menu" asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="fas fa-utensils me-2"></i>開始點餐
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
@functions {
    private decimal GetNextLevelRequirement(decimal currentSpent)
    {
        if (currentSpent < 500) return 500;      // 銅牌會員
        if (currentSpent < 2000) return 2000;   // 銀牌會員
        if (currentSpent < 5000) return 5000;   // 金牌會員
        if (currentSpent < 10000) return 10000; // 鑽石會員
        return 0; // 已達最高等級
    }
}