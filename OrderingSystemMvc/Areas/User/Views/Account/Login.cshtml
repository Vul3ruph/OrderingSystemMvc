@model OrderingSystemMvc.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "會員登入";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary">🔐 會員登入</h2>
                        <p class="text-muted">歡迎回來！</p>
                    </div>

                    <form asp-action="Login" method="post">
                        <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="your@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold"></label>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="請輸入密碼" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">
                                    記住我
                                </label>
                            </div>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>登入
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-2">
                                還沒有帳號？
                                <a asp-action="Register" class="text-primary text-decoration-none fw-semibold">立即註冊</a>
                            </p>
                            <p class="mb-0">
                                <a href="#" class="text-muted text-decoration-none small">忘記密碼？</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

            <!-- 快速登入提示 -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body text-center py-3">
                    <p class="small text-muted mb-0">
                        <i class="fas fa-info-circle me-1"></i>
                        登入後可查看訂單紀錄及享受會員專屬優惠
                    </p>
                </div>
            </div>
            <!-- 在現有內容後面加入管理員提示 -->
            <div class="mt-4">
                <hr>
                <div class="alert alert-info" role="alert">
                    <h6 class="alert-heading">
                        <i class="fas fa-shield-alt me-2"></i>管理員登入
                    </h6>
                    <p class="mb-2">管理員請使用相同的登入表單，系統會自動導向管理後台。</p>
                    <div class="row">
                        <div class="col-md-6">
                            <small>
                                <strong>超級管理員：</strong><br>
                                📧 admin@localhost.com<br>
                                🔐 Admin123!
                            </small>
                        </div>
                        <div class="col-md-6">
                            <small>
                                <strong>一般管理員：</strong><br>
                                📧 manager@localhost.com<br>
                                🔐 Manager123!
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}