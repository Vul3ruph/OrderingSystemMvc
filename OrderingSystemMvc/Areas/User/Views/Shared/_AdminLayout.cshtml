<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - 管理後台</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- 共用管理後台 CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    <style>
        /* 臨時樣式，確保正常顯示 */
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #f8fafc;
            margin: 0;
            padding: 0;
        }

        .admin-layout {
            display: flex;
            min-height: 100vh;
        }

        .admin-sidebar {
            width: 280px;
            background: #1e293b;
            color: white;
            padding: 1rem;
            box-shadow: 4px 0 15px rgba(0, 0, 0, 0.1);
        }

        .admin-main {
            flex: 1;
            padding: 2rem;
            overflow-x: auto;
        }

        .sidebar-brand {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #334155;
        }

        .nav-link-admin {
            color: #cbd5e1;
            text-decoration: none;
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            display: block;
            margin-bottom: 0.5rem;
            transition: all 0.2s ease;
        }

            .nav-link-admin:hover {
                background: #334155;
                color: white;
                text-decoration: none;
            }

            .nav-link-admin.active {
                background: linear-gradient(135deg, #2563eb, #3b82f6);
                color: white;
            }

            .nav-link-admin i {
                width: 20px;
                margin-right: 0.75rem;
            }

        @@media (max-width: 768px) {
            .admin-layout

        {
            flex-direction: column;
        }

        .admin-sidebar {
            width: 100%;
        }

        .admin-main {
            padding: 1rem;
        }

        }
    </style>
</head>
<body>
    <div class="admin-layout">
        <!-- 側邊欄 -->
        <nav class="admin-sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-tachometer-alt me-2"></i>
                餐廳管理系統
            </div>

            <div class="nav-menu">
                <a href="/Admin/Dashboard" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="fas fa-home"></i>儀表板
                </a>

                <a href="/Admin/MenuItem" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "MenuItem" ? "active" : "")">
                    <i class="fas fa-utensils"></i>菜品管理
                </a>

                <a href="/Admin/Order" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")">
                    <i class="fas fa-shopping-cart"></i>訂單管理
                </a>

                <a href="/Admin/Category" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")">
                    <i class="fas fa-tags"></i>分類管理
                </a>

                <a href="/Admin/Customer" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Customer" ? "active" : "")">
                    <i class="fas fa-users"></i>客戶管理
                </a>

                <a href="/Admin/Report" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Report" ? "active" : "")">
                    <i class="fas fa-chart-bar"></i>報表分析
                </a>

                <a href="/Admin/Setting" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Setting" ? "active" : "")">
                    <i class="fas fa-cog"></i>系統設定
                </a>

                <hr style="border-color: #334155; margin: 1rem 0;">

                <a href="/" target="_blank" class="nav-link-admin">
                    <i class="fas fa-external-link-alt"></i>前台預覽
                </a>

                <form method="post" action="/User/Account/Logout" class="mt-2">
                    <button type="submit" class="nav-link-admin w-100 border-0 text-start" style="background: none;">
                        <i class="fas fa-sign-out-alt"></i>安全登出
                    </button>
                </form>
            </div>
        </nav>

        <!-- 主要內容區域 -->
        <main class="admin-main">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>