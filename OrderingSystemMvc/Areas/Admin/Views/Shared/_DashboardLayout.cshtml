<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 餐廳管理後台</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <link href="~/css/admin-dashboard.css" rel="stylesheet" />
     
</head>
<body>
    <!-- 手機版遮罩 -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <!-- 側邊欄 -->
    <aside class="admin-sidebar slide-in-left" id="adminSidebar">
        <div class="sidebar-header">
            <i class="fas fa-utensils logo-icon"></i>
            <span class="logo-text">餐廳管理系統</span>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <nav class="nav-menu">
            <div class="nav-item">
                <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="fas fa-chart-line"></i>
                    <span class="nav-text">儀表板</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="@Url.Action("Index", "Order", new { area = "Admin" })" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="nav-text">訂單管理</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="@Url.Action("Index", "MenuItem", new { area = "Admin" })" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "MenuItem" ? "active" : "")">
                    <i class="fas fa-utensils"></i>
                    <span class="nav-text">菜單管理</span>
                </a>
            </div>

            <div class="nav-item">
                <a href="@Url.Action("Index", "Category", new { area = "Admin" })" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")">
                    <i class="fas fa-tags"></i>
                    <span class="nav-text">分類管理</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="@Url.Action("Index", "Option", new { area = "Admin" })" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "MenuItem" ? "active" : "")">
                    <i class="fas fa-utensils"></i>
                    <span class="nav-text">選項大類管理</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="@Url.Action("Index", "OptionItems", new { area = "Admin" })" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "MenuItem" ? "active" : "")">
                    <i class="fas fa-utensils"></i>
                    <span class="nav-text">選項細類管理</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-users"></i>
                    <span class="nav-text">顧客管理</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-chart-bar"></i>
                    <span class="nav-text">銷售報表</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-cog"></i>
                    <span class="nav-text">系統設定</span>
                </a>
            </div>

            <!-- 分隔線 -->
            <hr style="margin: 1rem; border-color: #e5e7eb;">

            <div class="nav-item">
                <a href="@Url.Action("Index", "Menu", new { area = "User" })" class="nav-link">
                    <i class="fas fa-external-link-alt"></i>
                    <span class="nav-text">前台預覽</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#" class="nav-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span class="nav-text">登出</span>
                </a>
            </div>
        </nav>
    </aside>

    <!-- 主要內容區域 -->
    <main class="admin-main">
        <!-- 頂部標題欄 -->
        <header class="admin-header fade-in-up">
            <div class="d-flex align-items-center">
                <button class="mobile-menu-btn" id="mobileMenuBtn">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title">@ViewData["Title"]</h1>
            </div>

            <div class="header-actions">
                <!-- 通知鈴鐺 -->
                <button class="notification-bell">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge"></span>
                </button>

                <!-- 用戶信息 -->
                <div class="user-info">
                    <span>歡迎回來，管理員</span>
                    <div class="user-avatar">A</div>
                </div>
            </div>
        </header>

        <!-- 麵包屑導航 -->
        @if (ViewBag.ShowBreadcrumb != false)
        {
            <nav class="breadcrumb-nav fade-in-up">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                            <i class="fas fa-home"></i> 首頁
                        </a>
                    </li>
                    @if (ViewBag.BreadcrumbItems != null)
                    {
                        @foreach (var item in ViewBag.BreadcrumbItems as List<dynamic>)
                        {
                            if (item.Url != null)
                            {
                                <li class="breadcrumb-item">
                                    <a href="@item.Url">@item.Title</a>
                                </li>
                            }
                            else
                            {
                                <li class="breadcrumb-item active">@item.Title</li>
                            }
                        }
                    }
                    else
                    {
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    }
                </ol>
            </nav>
        }

        <!-- 頁面內容 -->
        <div class="admin-content fade-in-up">
            @RenderBody()
        </div>
    </main>

    <!-- JavaScript Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <!-- Dashboard Layout JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('adminSidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileOverlay = document.getElementById('mobileOverlay');

            // // 桌面版側邊欄收合
            // if (sidebarToggle) {
            //     sidebarToggle.addEventListener('click', function() {
            //         sidebar.classList.toggle('collapsed');

            //         // 保存狀態到 localStorage
            //         const isCollapsed = sidebar.classList.contains('collapsed');
            //         localStorage.setItem('sidebarCollapsed', isCollapsed);
            //     });
            // }

            // // 載入保存的側邊欄狀態
            // const savedState = localStorage.getItem('sidebarCollapsed');
            // if (savedState === 'true') {
            //     sidebar.classList.add('collapsed');
            // }

            // 手機版側邊欄切換
            if (mobileMenuBtn) {
                mobileMenuBtn.addEventListener('click', function() {
                    sidebar.classList.add('mobile-open');
                    mobileOverlay.classList.add('active');
                });
            }

            // 點擊遮罩關閉側邊欄
            if (mobileOverlay) {
                mobileOverlay.addEventListener('click', function() {
                    sidebar.classList.remove('mobile-open');
                    mobileOverlay.classList.remove('active');
                });
            }

            // 導航連結高亮
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', function() {
                    // 移動端點擊後關閉側邊欄
                    if (window.innerWidth <= 768) {
                        sidebar.classList.remove('mobile-open');
                        mobileOverlay.classList.remove('active');
                    }
                });
            });

            // 響應式處理
            function handleResize() {
                if (window.innerWidth > 768) {
                    sidebar.classList.remove('mobile-open');
                    mobileOverlay.classList.remove('active');
                }
            }

            window.addEventListener('resize', handleResize);
        });

        // 全局通知功能
        function showNotification(message, type = 'success') {
            // 可以在這裡實作 Toast 通知
            console.log(`${type.toUpperCase()}: ${message}`);
        }

        // 全局載入狀態
        function showLoading() {
            // 可以在這裡實作載入動畫
            console.log('Loading...');
        }

        function hideLoading() {
            // 隱藏載入動畫
            console.log('Loading complete');
        }
    </script>

    <!-- 頁面專用 JavaScript -->
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</body>
</html>