<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - 管理後台</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- 共用管理後台 CSS -->
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
</head>
<body>
    <div class="admin-layout">
        <!-- 側邊欄 -->
        <nav class="admin-sidebar" id="adminSidebar">
            <!-- 頂部品牌區 -->
            <div class="sidebar-header">
                <h1 class="sidebar-brand">
                    <i class="fas fa-utensils"></i>
                    餐廳管理系統
                </h1>
            </div>

            <!-- 導航選單 -->
            <div class="nav-menu">
                <!-- 主要功能 -->
                <div class="nav-section">
                    <div class="nav-section-title">主要功能</div>

                    <a href="/Admin/Dashboard" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i>儀表板
                    </a>

                    <a href="/Admin/MenuItem" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "MenuItem" ? "active" : "")">
                        <i class="fas fa-utensils"></i>菜單管理
                    </a>

                    <a href="/Admin/Order" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")">
                        <i class="fas fa-shopping-cart"></i>訂單管理
                    </a>

                    <a href="/Admin/Category" class="nav-link-admin @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")">
                        <i class="fas fa-tags"></i>分類管理
                    </a>
                </div>

                <!-- 用戶與報表 -->
                <div class="nav-section">
                    <div class="nav-section-title">用戶與報表</div>

                    <a href="/Admin/UnderDevelopment?feature=Customer"
                       class="nav-link-admin coming-soon"
                       title="功能開發中，點擊查看詳情">
                        <i class="fas fa-users"></i>客戶管理
                        <span class="badge bg-info text-white ms-auto">即將推出</span>
                    </a>

                    <a href="/Admin/UnderDevelopment?feature=Report"
                       class="nav-link-admin coming-soon"
                       title="功能開發中，點擊查看詳情">
                        <i class="fas fa-chart-bar"></i>報表分析
                        <span class="badge bg-info text-white ms-auto">即將推出</span>
                    </a>
                </div>

                <!-- 系統設定 -->
                <div class="nav-section">
                    <div class="nav-section-title">系統設定</div>

                    <a href="/Admin/UnderDevelopment?feature=Setting"
                       class="nav-link-admin coming-soon"
                       title="功能開發中，點擊查看詳情">
                        <i class="fas fa-cog"></i>系統設定
                        <span class="badge bg-info text-white ms-auto">即將推出</span>
                    </a>

                    <a href="/Admin/UnderDevelopment?feature=AdminManagement"
                       class="nav-link-admin coming-soon"
                       title="功能開發中，點擊查看詳情">
                        <i class="fas fa-user-shield"></i>管理員權限
                        <span class="badge bg-info text-white ms-auto">即將推出</span>
                    </a>
                </div>


                <hr class="nav-divider">

                <!-- 其他功能 -->
                <a href="/" target="_blank" class="nav-link-admin">
                    <i class="fas fa-external-link-alt"></i>前台預覽
                </a>

                <form method="post" action="/User/Account/Logout" class="mt-2">
                    <button type="submit" class="nav-link-admin logout-btn w-100 border-0 text-start">
                        <i class="fas fa-sign-out-alt"></i>安全登出
                    </button>
                </form>
            </div>
        </nav>

        <!-- 主要內容區域 -->
        <main class="admin-main">
            <!-- 頂部導航欄 -->
            <header class="main-header">
                <div class="page-header">
                    <div>
                        <button class="mobile-menu-btn" onclick="toggleSidebar()">
                            <i class="fas fa-bars"></i>
                        </button>
                        <h1 class="page-title">@ViewData["Title"]</h1>
                        <p class="page-subtitle">管理系統控制面板</p>
                    </div>

                    <div class="header-actions">
                        <button class="notification-btn">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge"></span>
                        </button>

                        <div class="user-info">
                            <div class="user-avatar">A</div>
                            <div>
                                <div style="font-weight: 600; font-size: 0.875rem;">系統管理員</div>
                                <div style="font-size: 0.75rem;">SuperAdmin</div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- 頁面內容 -->
            <div class="main-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Mobile Overlay -->
    <div class="mobile-overlay" id="mobileOverlay" onclick="toggleSidebar()" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.5); z-index: 999;"></div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // 手機版側邊欄切換
        function toggleSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            const overlay = document.getElementById('mobileOverlay');

            if (window.innerWidth <= 768) {
                sidebar.classList.toggle('mobile-open');
                overlay.style.display = sidebar.classList.contains('mobile-open') ? 'block' : 'none';
            }
        }

        // 窗口大小改變時處理
        window.addEventListener('resize', function() {
            const sidebar = document.getElementById('adminSidebar');
            const overlay = document.getElementById('mobileOverlay');

            if (window.innerWidth > 768) {
                sidebar.classList.remove('mobile-open');
                overlay.style.display = 'none';
            }
        });

        // 頁面載入動畫
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link-admin');
            navLinks.forEach((link, index) => {
                link.style.opacity = '0';
                link.style.transform = 'translateX(-20px)';
                setTimeout(() => {
                    link.style.transition = 'all 0.6s ease';
                    link.style.opacity = '1';
                    link.style.transform = 'translateX(0)';
                }, index * 100);
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>