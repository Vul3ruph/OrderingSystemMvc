@model OrderingSystemMvc.ViewModels.DashboardVM
@{
    ViewData["Title"] = "管理員儀表板";
}

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<!-- 頂部標題欄 -->
<div class="admin-header">
    <div>
        
        <small class="text-secondary">歡迎回來，@Model.CurrentAdmin.DisplayName！今天是 @DateTime.Now.ToString("yyyy年MM月dd日 dddd")</small>
    </div>
    <div class="header-actions">
        
        <div class="user-info">
            <div class="user-avatar">
                @Model.CurrentAdmin.DisplayName?.Substring(0, 1)
            </div>
            <div>
                <div class="fw-bold">@Model.CurrentAdmin.DisplayName</div>
                <small class="text-muted">@Model.CurrentAdmin.UserType</small>
            </div>
        </div>
    </div>
</div>

<!-- 主要內容區域 -->
<div class="admin-content">
    <!-- 統計卡片區域 -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                今日訂單
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TodayOrders</div>
                            <div class="text-xs text-muted mt-1">
                                本週：@Model.WeeklyOrders 筆
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-shopping-cart fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                今日營收
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">NT$ @Model.TodayRevenue.ToString("N0")</div>
                            <div class="text-xs text-muted mt-1">
                                本週：NT$ @Model.WeeklyRevenue.ToString("N0")
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                菜品總數
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalMenuItems</div>
                            <div class="text-xs text-muted mt-1">
                                @Model.TotalCategories 個分類
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-utensils fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                註冊用戶
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalUsers</div>
                            <div class="text-xs text-muted mt-1">
                                總訂單：@Model.TotalOrders 筆
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 圖表和詳細資訊區域 -->
    <div class="row">
        <!-- 訂單狀態統計 -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-pie me-2"></i>訂單狀態分析
                    </h6>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="position: relative; height: 250px;">
                        <canvas id="orderStatusChart"></canvas>
                    </div>
                    <div class="mt-3">
                        @foreach (var status in Model.OrderStatusStats)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="d-flex align-items-center">
                                    <div class="status-indicator me-2" style="width: 12px; height: 12px; border-radius: 50%; background-color: #4e73df;"></div>
                                    <span class="small">@status.StatusName</span>
                                </div>
                                <div class="text-end">
                                    <span class="text-dark font-weight-bold">@status.Count</span>
                                    <small class="text-muted">(@status.Percentage.ToString("F1")%)</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- 熱門菜品 -->
        <div class="col-xl-4 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-fire me-2"></i>熱門菜品 TOP 5
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.PopularMenuItems.Any())
                    {
                        @foreach (var item in Model.PopularMenuItems.Take(5))
                        {
                            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <div>
                                    <div class="font-weight-bold text-dark">@item.Name</div>
                                    <small class="text-muted">銷量：@item.TotalQuantity 份</small>
                                </div>
                                <div class="text-end">
                                    <div class="font-weight-bold text-success">NT$ @item.TotalRevenue.ToString("N0")</div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-2x mb-3"></i>
                            <p class="mb-0">暫無銷售資料</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- 最近訂單 -->
        <div class="col-xl-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-clock me-2"></i>最近訂單
                    </h6>
                    <a href="/Admin/Order" class="btn btn-sm btn-primary">查看全部</a>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentOrders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th class="border-0">訂單</th>
                                        <th class="border-0">金額</th>
                                        <th class="border-0">狀態</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td class="border-0">
                                                <div>
                                                    <div class="font-weight-bold">#@order.Id</div>
                                                    <small class="text-muted">@order.CreatedAt.ToString("MM/dd HH:mm")</small>
                                                </div>
                                            </td>
                                            <td class="border-0">
                                                <span class="font-weight-bold">NT$ @order.TotalAmount.ToString("N0")</span>
                                            </td>
                                            <td class="border-0">
                                                <span class="badge badge-primary">@order.StatusName</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-receipt fa-2x mb-3"></i>
                            <p class="mb-0">暫無訂單資料</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- 快速操作區域 - 替換原本的部分 -->
    <div class="card shadow mb-4" style="border-radius: 20px; overflow: hidden;">
        <div class="card-header py-3" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);">
            <h6 class="m-0 font-weight-bold" style="background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-size: 1.125rem;">
                <i class="fas fa-bolt me-2"></i>快速操作
            </h6>
        </div>
        <div class="card-body" style="padding: 2rem;">
            <div class="row g-4">
                <!-- 第一排 -->
                <div class="col-lg-4 col-md-6">
                    <a href="/Admin/MenuItem" class="text-decoration-none">
                        <div class="quick-action-btn">
                            <div class="quick-action-icon bg-primary">
                                <i class="fas fa-utensils"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6 class="mb-1 text-dark">菜品管理</h6>
                                <small class="text-muted">管理菜單項目</small>
                            </div>
                            <div class="quick-action-arrow">
                                <i class="fas fa-chevron-right text-muted"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-4 col-md-6">
                    <a href="/Admin/Order" class="text-decoration-none">
                        <div class="quick-action-btn">
                            <div class="quick-action-icon bg-success">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6 class="mb-1 text-dark">訂單管理</h6>
                                <small class="text-muted">處理客戶訂單</small>
                            </div>
                            <div class="quick-action-arrow">
                                <i class="fas fa-chevron-right text-muted"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-4 col-md-6">
                    <a href="/Admin/Category" class="text-decoration-none">
                        <div class="quick-action-btn">
                            <div class="quick-action-icon bg-warning">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6 class="mb-1 text-dark">分類管理</h6>
                                <small class="text-muted">管理菜品分類</small>
                            </div>
                            <div class="quick-action-arrow">
                                <i class="fas fa-chevron-right text-muted"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="row g-4 mt-2">
                <!-- 第二排 -->
                <div class="col-lg-4 col-md-6">
                    <a href="/Admin/Customer" class="text-decoration-none">
                        <div class="quick-action-btn">
                            <div class="quick-action-icon bg-info">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6 class="mb-1 text-dark">客戶管理</h6>
                                <small class="text-muted">管理註冊用戶</small>
                            </div>
                            <div class="quick-action-arrow">
                                <i class="fas fa-chevron-right text-muted"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-4 col-md-6">
                    <a href="/Admin/Report" class="text-decoration-none">
                        <div class="quick-action-btn">
                            <div class="quick-action-icon bg-danger">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6 class="mb-1 text-dark">報表分析</h6>
                                <small class="text-muted">查看銷售統計</small>
                            </div>
                            <div class="quick-action-arrow">
                                <i class="fas fa-chevron-right text-muted"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-4 col-md-6">
                    <a href="/Admin/Setting" class="text-decoration-none">
                        <div class="quick-action-btn">
                            <div class="quick-action-icon bg-secondary">
                                <i class="fas fa-cog"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6 class="mb-1 text-dark">系統設定</h6>
                                <small class="text-muted">配置系統參數</small>
                            </div>
                            <div class="quick-action-arrow">
                                <i class="fas fa-chevron-right text-muted"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="row g-4 mt-2">
                <!-- 第三排 -->
                <div class="col-lg-4 col-md-6">
                    <a href="/" target="_blank" class="text-decoration-none">
                        <div class="quick-action-btn">
                            <div class="quick-action-icon" style="background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); box-shadow: 0 4px 20px rgba(139, 92, 246, 0.3);">
                                <i class="fas fa-external-link-alt"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6 class="mb-1 text-dark">前台預覽</h6>
                                <small class="text-muted">查看顧客界面</small>
                            </div>
                            <div class="quick-action-arrow">
                                <i class="fas fa-external-link-alt text-muted"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-4 col-md-6">
                    <a href="/Admin/AdminManagement" class="text-decoration-none">
                        <div class="quick-action-btn">
                            <div class="quick-action-icon" style="background: linear-gradient(135deg, #374151 0%, #1f2937 100%); box-shadow: 0 4px 20px rgba(55, 65, 81, 0.3);">
                                <i class="fas fa-user-shield"></i>
                            </div>
                            <div class="quick-action-content">
                                <h6 class="mb-1 text-dark">管理員權限</h6>
                                <small class="text-muted">權限管理</small>
                            </div>
                            <div class="quick-action-arrow">
                                <i class="fas fa-chevron-right text-muted"></i>
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-lg-4 col-md-6">
                    <form method="post" action="/User/Account/Logout" class="h-100">
                        <button type="submit" class="btn p-0 border-0 bg-transparent w-100 h-100" style="border-radius: 16px;">
                            <div class="quick-action-btn" style="background: linear-gradient(135deg, #fef2f2 0%, #fce8e8 100%); border-color: #fecaca;">
                                <div class="quick-action-icon" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); box-shadow: 0 4px 20px rgba(239, 68, 68, 0.3);">
                                    <i class="fas fa-sign-out-alt"></i>
                                </div>
                                <div class="quick-action-content">
                                    <h6 class="mb-1 text-dark">安全登出</h6>
                                    <small class="text-muted">結束管理session</small>
                                </div>
                                <div class="quick-action-arrow">
                                    <i class="fas fa-sign-out-alt text-muted"></i>
                                </div>
                            </div>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <!-- Chart.js -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            // 訂單狀態圓餅圖
            const ctx = document.getElementById('orderStatusChart').getContext('2d');
            const orderStatusChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.OrderStatusStats.Select(s => $"'{s.StatusName}'")))],
                    datasets: [{
                        data: [@string.Join(",", Model.OrderStatusStats.Select(s => s.Count))],
                        backgroundColor: [
                            '#4e73df',
                            '#1cc88a',
                            '#36b9cc',
                            '#f6c23e',
                            '#e74a3b',
                            '#858796'
                        ],
                        borderWidth: 2,
                        borderColor: '#ffffff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    cutout: '60%'
                }
            });

            // 載入動畫
            document.addEventListener('DOMContentLoaded', function() {
                const elements = document.querySelectorAll('.card, .quick-action-btn');
                elements.forEach((element, index) => {
                    element.style.opacity = '0';
                    element.style.transform = 'translateY(20px)';
                    setTimeout(() => {
                        element.style.transition = 'all 0.6s ease';
                        element.style.opacity = '1';
                        element.style.transform = 'translateY(0)';
                    }, index * 100);
                });

                // 數字動畫效果
                const counters = document.querySelectorAll('.h5');
                counters.forEach(counter => {
                    counter.addEventListener('mouseenter', function() {
                        this.classList.add('animate');
                    });
                    counter.addEventListener('mouseleave', function() {
                        this.classList.remove('animate');
                    });
                });
            });
        </script>
    }
